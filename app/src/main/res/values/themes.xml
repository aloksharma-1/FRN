<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FoodAPK" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Set the ripple color for the app -->
        <item name="colorControlHighlight">@color/endcolorgradient</item> <!-- Replace with your color -->

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar customization (optional) -->
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Set a default text color on the primary background -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>
</resources>
