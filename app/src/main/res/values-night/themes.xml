<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for day mode -->
    <style name="Theme.FoodAPK" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Ripple effect color -->
        <item name="colorControlHighlight">@color/endcolorgradient</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_light</item>
    </style>

    <!-- Night mode theme for better readability in dark mode -->
    <style name="Theme.FoodAPK.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Ripple effect color -->
        <item name="colorControlHighlight">@color/endcolorgradient</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Text colors for night mode -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_light</item>

        <!-- Background colors for night mode -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
    </style>
</resources>
